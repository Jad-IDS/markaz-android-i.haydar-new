                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:tint="@color/primary"
                    />

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:textSize="@dimen/font"
                    android:id="@+id/spPortfolioReport"

                    />

        </RelativeLayout>-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/second_margin"
                android:background="@color/gray_separator"/>


        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/small_font"
                android:text="@string/select_report"
                android:layout_marginTop="@dimen/big_margin"
                />




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:id="@+id/rvReportTypes"
            android:layout_marginTop="@dimen/second_margin"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginBottom="@dimen/second_margin"
            android:orientation="horizontal">

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/normal_margin"
                android:id="@+id/btView"
                android:layout_marginRight="@dimen/normal_margin"
                android:background="@drawable/rounded_corner_primary"
                android:gravity="center"
                android:text="@string/view"
                android:textColor="@color/white"
                android:textSize="@dimen/font" />


        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/rounded_corner_primary"
                android:textColor="@color/white"
                android:textSize="@dimen/font"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/email"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                />
    </LinearLayout>
</LinearLayout>


            </androidx.core.widget.NestedScrollView>







        </LinearLayout>




    </LinearLayout>


</LinearLayout>