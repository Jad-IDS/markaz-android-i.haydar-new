<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners
                    android:topRightRadius="@dimen/mini_radius"
                    android:bottomRightRadius="@dimen/mini_radius" />

            <stroke android:width="1dip" android:color="@color/gold_light_bg" />
            <gradient android:angle="-90" android:startColor="@color/gold_light_bg"
                    android:endColor="@color/gold_light_bg"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                    android:topRightRadius="@dimen/mini_radius"
                    android:bottomRightRadius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="@color/gold_light_bg" />
            <solid android:color="@color/gold_light_bg"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                    android:topRightRadius="@dimen/mini_radius"
                    android:bottomRightRadius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="@color/gold_light_bg" />
            <solid android:color="@color/gold_light_bg"/>
        </shape>
    </item>
</selector>