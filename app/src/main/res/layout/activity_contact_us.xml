<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/secondary"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <include layout="@layout/toolbar_general"/>
        <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/layout_elevation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mapView"
                app:cardElevation="2dp"
                android:layout_marginLeft="@dimen/second_margin"
                android:layout_marginRight="@dimen/second_margin"
                android:layout_marginBottom="@dimen/second_margin"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"

                >


            <com.google.android.gms.maps.MapView
                    android:id="@+id/mapViewContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


        </androidx.cardview.widget.CardView>



        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_white_frame">


            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    <LinearLayout
                            android:id="@+id/linearCall"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/table_row_height"
                            android:layout_marginLeft="@dimen/second_margin"
                            android:layout_marginTop="@dimen/second_margin"
                            android:layout_marginRight="@dimen/second_margin"
                            android:background="@drawable/rectangular_white"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="@dimen/to_button"
                                android:layout_height="@dimen/to_button"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:src="@drawable/phone" />

                        <com.ids.markaz.custom.CustomTextViewMedium
                                android:id="@+id/tvCall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/big_margin"
                                android:text="@string/markaz_phone"
                                android:textColor="@color/gray_text_dark"
                                android:textSize="@dimen/big_font" />

                        <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingRight="@dimen/big_margin">

                            <ImageView


                                    android:layout_width="@dimen/to_button"
                                    android:layout_height="@dimen/to_button"
                                    android:src="@drawable/arrow" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/linearEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/table_row_height"
                            android:layout_marginLeft="@dimen/second_margin"
                            android:layout_marginTop="@dimen/second_margin"
                            android:layout_marginRight="@dimen/second_margin"
                            android:background="@drawable/rectangular_white"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="@dimen/to_button"
                                android:layout_height="@dimen/to_button"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:src="@drawable/email" />

                        <com.ids.markaz.custom.CustomTextViewMedium
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/big_margin"
                                android:paddingLeft="@dimen/big_margin"
                                android:text="@string/markaz_email"
                                android:textColor="@color/gray_text_dark"
                                android:textSize="@dimen/big_font" />

                        <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingStart="@dimen/big_margin"
                                android:paddingRight="@dimen/big_margin">

                            <ImageView

                                    android:layout_width="@dimen/to_button"
                                    android:layout_height="@dimen/to_button"
                                    android:src="@drawable/arrow" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/linearChat"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/table_row_height"
                            android:layout_marginLeft="@dimen/second_margin"
                            android:layout_marginTop="@dimen/second_margin"
                            android:layout_marginRight="@dimen/second_margin"
                            android:background="@drawable/rectangular_white"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="@dimen/to_button"
                                android:layout_height="@dimen/to_button"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:src="@drawable/chat" />

                        <com.ids.markaz.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/big_margin"
                                android:paddingLeft="@dimen/big_margin"
                                android:text="@string/chat"
                                android:textColor="@color/gray_text_dark"
                                android:textSize="@dimen/big_font" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingRight="@dimen/big_margin">

                            <ImageView

                                    android:layout_width="@dimen/to_button"
                                    android:layout_height="@dimen/to_button"
                                    android:src="@drawable/arrow" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/linearFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/table_row_height"
                            android:layout_marginLeft="@dimen/second_margin"
                            android:layout_marginTop="@dimen/second_margin"
                            android:layout_marginRight="@dimen/second_margin"
                            android:background="@drawable/rectangular_white"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="@dimen/to_button"
                                android:layout_height="@dimen/to_button"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:src="@drawable/feedback" />

                        <com.ids.markaz.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/big_margin"
                                android:paddingLeft="@dimen/big_margin"
                                android:text="@string/feedback"
                                android:textColor="@color/gray_text_dark"
                                android:textSize="@dimen/big_font" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingRight="@dimen/big_margin">

                            <ImageView

                                    android:layout_width="@dimen/to_button"
                                    android:layout_height="@dimen/to_button"
                                    android:src="@drawable/arrow" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </ScrollView>




        </LinearLayout>


    </LinearLayout>






</LinearLayout>

