<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/card_corner_radius"  />

            <stroke android:width="1dip" android:color="@color/btn_skip_border" />
            <gradient android:angle="-90" android:startColor="@color/btn_skip_color"
                    android:endColor="@color/btn_skip_color"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/card_corner_radius" />
            <stroke android:width="1dip" android:color="@color/btn_skip_border" />
            <solid android:color="@color/btn_skip_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/card_corner_radius" />
            <stroke android:width="1dip" android:color="@color/btn_skip_border" />
            <gradient android:angle="-90" android:startColor="@color/btn_skip_color" android:endColor="@color/btn_skip_color" />
        </shape>
    </item>
</selector>