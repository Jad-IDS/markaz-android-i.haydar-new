<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary"
        android:orientation="vertical"
        >




    <include layout="@layout/toolbar_general"/>



    <LinearLayout
            android:layout_marginTop="@dimen/layout_elevation"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_white_frame"
            android:layout_height="match_parent"
           >
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


    <LinearLayout

            android:paddingLeft="@dimen/second_margin"
            android:paddingRight="@dimen/second_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_row_height"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:id="@+id/btSettings"
            android:layout_marginRight="@dimen/second_margin"
            android:gravity="center_vertical"
            android:background="@drawable/rectangular_white"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <ImageView
                android:layout_width="@dimen/to_button"
                android:layout_height="@dimen/to_button"
                android:src="@drawable/settings"/>

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/gray_text_dark"
                android:textSize="@dimen/big_font" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
        <ImageView


                android:layout_width="@dimen/to_button"
                android:layout_height="@dimen/to_button"
                android:src="@drawable/arrow"/>

        </LinearLayout>


    </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/btAbout"
                android:layout_height="@dimen/table_row_height"
                android:layout_marginLeft="@dimen/second_margin"
                android:layout_marginTop="@dimen/second_margin"
                android:layout_marginRight="@dimen/second_margin"
                android:gravity="center_vertical"
                android:background="@drawable/rectangular_white"
                android:orientation="horizontal"
                android:padding="@dimen/normal_margin">

            <ImageView
                    android:layout_width="@dimen/to_button"
                    android:layout_height="@dimen/to_button"
                    android:src="@drawable/aboutus"/>
            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginStart="@dimen/big_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/big_font"
                    />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                <ImageView


                        android:layout_width="@dimen/to_button"
                        android:layout_height="@dimen/to_button"
                        android:src="@drawable/arrow"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/btContact"
                android:layout_height="@dimen/table_row_height"
                android:layout_marginLeft="@dimen/second_margin"
                android:layout_marginTop="@dimen/second_margin"
                android:layout_marginRight="@dimen/second_margin"
                android:gravity="center_vertical"
                android:background="@drawable/rectangular_white"
                android:orientation="horizontal"
                android:padding="@dimen/normal_margin">

            <ImageView
                    android:layout_width="@dimen/to_button"
                    android:layout_height="@dimen/to_button"
                    android:src="@drawable/phone"/>

            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginStart="@dimen/big_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/big_font" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                <ImageView


                        android:layout_width="@dimen/to_button"
                        android:layout_height="@dimen/to_button"
                        android:src="@drawable/arrow"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
                android:id="@+id/llLogout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_row_height"
                android:layout_marginLeft="@dimen/second_margin"
                android:layout_marginTop="@dimen/second_margin"
                android:layout_marginRight="@dimen/second_margin"
                android:background="@drawable/rectangular_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/normal_margin">

            <ImageView

                    android:layout_width="@dimen/to_button"
                    android:layout_height="@dimen/to_button"
                    android:src="@drawable/logout"/>

            <com.ids.markaz.custom.CustomTextViewMedium

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="@string/logout"
                    android:textColor="@color/gray_text_dark"
                    android:textSize="@dimen/big_font" />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/btArabic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/rectangular_secondary_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/big_margin"
                    android:paddingEnd="@dimen/big_margin">

                <com.ids.markaz.custom.CustomTextViewMedium
                        android:id="@+id/tvItemTeamAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/f_arabic"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/small_font" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/btEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangular_secondary"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/big_margin"
                    android:paddingEnd="@dimen/big_margin">

                <com.ids.markaz.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/f_english"
                        android:textStyle="bold"
                        android:textColor="@color/white_trans"
                        android:textSize="@dimen/small_font" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:visibility="gone"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <Switch
                android:id="@+id/swShowNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/normal_margin">

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/biometric_login"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <Switch
                android:id="@+id/swBiometricLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_currency"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingStart="@dimen/normal_margin"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:padding="@dimen/small_margin"

                android:gravity="end"
                >
            <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="end"
                    android:gravity="end"
                    android:background="@drawable/bg_recangular_border_gray"
                    >


                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/mini_margin"
                        android:layout_marginLeft="@dimen/mini_margin"
                        android:src="@drawable/arrow_down"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:tint="@color/primary"
                        />

                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:textSize="@dimen/font"
                        android:id="@+id/spCurrencies"

                        />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <com.ids.markaz.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <com.ids.markaz.custom.CustomTextViewMedium
                android:id="@+id/tvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />
    </LinearLayout>



</LinearLayout>
        </ScrollView>
    </LinearLayout>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"/>




    </LinearLayout>
