<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners
                    android:radius="@dimen/mini_radius"  />

            <stroke android:width="1dip" android:color="@color/gray_block_border" />
            <gradient android:angle="-90" android:startColor="@color/gray_block"
                    android:endColor="@color/gray_block"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="@color/gray_block_border" />
            <solid android:color="@color/gray_block"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="@color/gray_block_border" />
            <solid android:color="@color/gray_block"/>
        </shape>
    </item>
</selector>